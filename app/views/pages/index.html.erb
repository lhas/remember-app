<% if user_signed_in? %>

  <h2>Create new Insight</h2>

  <%= render 'insights/form', url: create_insight_path %>

  <h2>Latest Insights</h2>

  <% unless @user_insights.any? %>
    <p>You don't have any insights. Lets smoke some weed, listen some music and start?</p>
  <% else %>

    <ul>

      <% @user_insights.each do |insight| %>
        <li>
          "<%= insight.content %>" <small><%= timeago(insight.created_at) %></small> 
          <a href="<%= edit_insight_path(insight) %>" title="edit this">[e]</a>
          <%= link_to '[d]', destroy_insight_path(insight), confirm: 'Are you sure?' %>
        </li>
      <% end %>

    </ul>

  <% end %>
  
  <hr>

<% end %>


